<script>
var otraInput = document.getElementById('otraInput');
function bloqueado(){
    otraInput.disabled = true;
}
bloqueado();


function razasLista() {
var tomaLista = document.getElementById('especie').value;

if (tomaLista === "Canina") {
otraInput.disabled = true;
var array = ["Elegir Raza", "No se conoce", "Beagle", "Boxer", "Bulldog Frances", "Bulldog inglés", "Chihuahua", "Chow chow", "Cocker spaniel", "Criollo y/o Mestizo", "Frespuder", "Golden Retrevier", "Husky siberiano", "Labrador Retriver", "Pastor Aleman", "Perro salchicha", "Pinscher", "Poodle", "San Bernardo", "Schnauzer", "Shar pei", "Shih tzu", "Shorkie", "Yorshire Terrier", "American Staffordshire Terrier", "Bullmastiff", "Dóberman", "Dogo Argentino ó Gran danés", "Dogo de Burdeos", "Fila Brasileiro", "Mastín Napolitano", "Bull Terrier", "Pit Bull Terrier", "American Pit Bull Terrier", "de presa canario", "Rottweiler", "Staffordshire Terrier", "Tosa Japonés"];
} else if (tomaLista === "Felino(a)") {
otraInput.disabled = true;
var array = ["Elegir Raza", "No se conoce", "siamés", "somalí", "Ragdoll", "Persa", "Maine Coon", "Común Europeo", "Ruso Azul", "Bobtail americano", "Siberiano", "Manés", "Birmano o Burmés"];
} else if (tomaLista === "Caballo") {
otraInput.disabled = true;
var array = ["No se conoce"];
} else if (tomaLista === "Burro") {
otraInput.disabled = true;
var array = ["No se conoce"];
} else if (tomaLista === "Cabra") {
otraInput.disabled = true;
var array = ["No se conoce"];
} else if (tomaLista === "Otra") {
otraInput.disabled = false;
var array = ["No se conoce"];
}
else {
var array = [];
}

var string = " ";
for (i = 0; i < array.length; i++) {
ary = array[i];
