<div class="container mt-80 ">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <h2>| Registro de Mascota</h2>
            <div class="card mt-20">
                <div class="card-body">
                    <form action="/mascotas/add" method="POST" enctype="multipart/form-data">
                        <div class="form-row">
                            <div class="col-lg-6 col-md-6">
                                <label for=""><span style="color: red;">* </span><b>Foto de Perfil de tu Mascota:</b></label>
                                <input class="genric-btn radius" type="file" name="imagen_mascota" accept="image/*"
                                    required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputEmail4"><span style="color: red;">* </span><b>Nombre de tu Mascota:</b></label>
                                <input type="text" id="myminNombre" class="form-control" name="nombre_mascota"
                                    placeholder="Nombre" maxlength="30" autofocus required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-lg-3 col-md-3">
                                <label for=""><span style="color: red;">* </span><b>Tipo o Calidad de Titular:</b></label>
                                <div class="select-itms">
                                    <select name="padrinazgo_mascota" required>
                                        <option value="">Elegir opción</option>
                                        <option value="Propietario">Propietario</option>
                                        <option value="Padrinazgo individual">Padrinazgo Individual</option>
                                        <option value="Padrinazgo comunitario">Padrinazgo Comunitario</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-3">
                                <label for=""><span style="color: red;">* </span><b>Tipo de Especie:</b></label>
                                <div class="select-itms">
                                    <select id="especie" onchange="razasLista()" name="especie_mascota" required>
                                        <option value="">Elegir opción</option>
                                        <option value="{{especies1.nombre_especie}}">{{especies1.nombre_especie}}
                                        </option>
                                        <option value="{{especies3.nombre_especie}}">{{especies3.nombre_especie}}
                                        </option>
                                        <option value="{{especies4.nombre_especie}}">{{especies4.nombre_especie}}
                                        </option>
                                        <option value="{{especies5.nombre_especie}}">{{especies5.nombre_especie}}
                                        </option>
                                        <option value="{{especies6.nombre_especie}}">{{especies6.nombre_especie}}
                                        </option>
                                        <option value="{{especies2.nombre_especie}}">{{especies2.nombre_especie}}
                                        </option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-3">
                                <label for=""><b>Otra Especie:</b></label>
                                <input type="text" class="form-control" name="otra_especie" placeholder="Otra Especie" id="otraInput" minlength="3" maxlength="30">
                            </div>
                            <div class="form-group col-lg-2 col-md-2">
                                <label for=""><b>Tipo de Raza:</b></label>
                                <div id="raza">
                                    <select required>
                                        <option value="">Elegir opción</option>
                                        <option value="No se conoce">No se conoce</option>
                                       <!-- {{#each raza}}
                                        <option value="{{this}}">{{this}}</option>
                                        {{/each}} -->
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for=""><span style="color: red;">* </span><b>Dirección:</b></label>
                                <input type="text" class="form-control" name="direccion_mascota" placeholder="dirección" minlength="7" maxlength="30"
                                    required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for=""><span style="color: red;">* </span><b>Fecha de Nacimiento:</b></label>
                                <input class="form-control" type="date" name="nacimiento_mascota" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for=""><span style="color: red;">* </span><b>Tamaño de tu Mascota (cm):</b></label>
                                <input type="text" id="" class="form-control" name="tamaño_mascota"
                                    placeholder="Tamaño (cm de alto x ancho)" minlength="5" maxlength="10" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for=""><b>Número de Microchip:</b></label>
                                <input type="text" id="numerochip" class="form-control" name="microchip_mascota"
                                    placeholder="Numero de chip" minlength="5" maxlength="12">
                            </div>
                        </div>
                        <div class="form-row mt-10">
                                <div class="col-md-6">
                                <label for=""><b>¿Tu mascota tiene rasgos especiales?:</b></label>
                                <textarea type="text" class="form-control" name="rasgos_mascota"
                                    placeholder="Describe los rasgos físicos tales como cicatrices, marcas, amputaciones parciales, etc..."
                                    rows="3" maxlength="60"></textarea>
                                <p align="right"><i>Escribe hasta 60 caracteres</i></p>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <label for=""><span style="color: red;">* </span><b>Conforme el art. 7 de la ley 2054 de 2020. La raza de tu mascota es de:
                                    </b></label>
                                <div class="select-itms">
                                    <input id="detalle" type="radio" name="peligrosa_mascota" value="si" checked="checked" onclick="mostrarDetalle()" required>
                                    <label>Manejo o Cuidado Especial (antes potencialmente peligrosas)</label><br>
                                    <input id="asistencia" type="radio" name="peligrosa_mascota" value="no" onclick="mostrarAsistencia()" required>
                                    <label>No es de Manejo Especial</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div id="mostrarDetalle" class="col-lg-6 col-md-6">
                                <label for=""><span style="color: red;"><strong>* </strong></span><b>Compromiso Manejo Especial:</b></label>
                                <p>Al poseer una mascota de manejo especial, debes descargar y diligenciar la <strong>Carta de Compromiso</strong> que obligatoriamente debes adjuntar.
                                <a href="https://firebasestorage.googleapis.com/v0/b/sian-97abc.appspot.com/o/Carta%20de%20Compromiso%20Mascotas%20de%20Manejo%20Especial.docx?alt=media&token=207be197-039a-4aca-94e5-b524a13db0e6"
                                    download="Formato Denuncia Maltrato Animal.docx"
                                    style="color: #1f2c7b; text-decoration: underline;">Descargar Carta</a></p>
                                <input type="file" name="carta_mascota_peligrosa" class="genric-btn radius"
                                    id="archivoInput" aria-describedby="fileHelp" accept=".docx,application/msword">
                            </div>
                            <div id="mostrarVacunas" class="col-lg-6 col-md-6">
                                    <label for=""><span style="color: red;"><strong>* </strong></span><b>Esquema de Vacunación (PNG, JPG, JPEG):</b></label>
                                    <p>Al poseer una mascota de manejo especial, debes adjuntar su esquema de vacunación obligatoriamente</p>
                                    <input type="file" name="vacunacion_mascota" class="genric-btn radius"
                                        id="archivoInputVacunas" aria-describedby="fileHelp" accept="image/*" required>
                            </div>    
                        </div>
                         <div id="mostrarAsistencia"></div>

                       <div class="mt-5"> <span style="color: red;">* Campos Obligatorios</span></div>
 
                            <!--<div class="col-lg-6 col-md-6">
                                                                <label for=""><span style="color: red;"><strong>*</strong></span><b> Historia Clinica de tu Mascota (PDF o DOC):</b></label>
                                <input type="file" name="historia_clinica_mascota" class="genric-btn radius"
                                    id="exampleInputFile" aria-describedby="fileHelp"
                                    accept=".pdf,.doc,.docx,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document">
                            </div>-->
                        
                        <div class="form-group mt-30">
                            <button class="btn btn-success btn-block">
                                Registrar Mascota
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



<script type="text/javascript">
  function mostrarDetalle() {
      document.getElementById("mostrarDetalle").style.display = 'block';
      document.getElementById("mostrarVacunas").style.display = 'block';
      document.getElementById("mostrarAsistencia").style.display ='none';
      document.getElementById("asistencia").checked = false;
      document.getElementById("detalle").checked = true;
      document.getElementById("archivoInput").required = true;
      document.getElementById("archivoInputVacunas").required = true;
      
  }  

  function mostrarAsistencia() {
      document.getElementById("mostrarAsistencia").style.display ='block';
      document.getElementById("mostrarDetalle").style.display = 'none';
      document.getElementById("mostrarVacunas").style.display = 'none';
      document.getElementById("asistencia").checked = true;
      document.getElementById("detalle").checked = false;
      document.getElementById("archivoInput").required = false;
      document.getElementById("archivoInputVacunas").required = false;
  }

  mostrarAsistencia();
</script> 

