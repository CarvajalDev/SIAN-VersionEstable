<script type="text/javascript">

    var todas = document.getElementById('todosAnimales');
    var extraviados = document.getElementById('todosExtraviados');
    var hurtados = document.getElementById('todosHurtados');
    var hallados = document.getElementById('todosHallados');


  function otra(){
        todas.style.display = 'flex';
        extraviados.style.display = 'none';
        hurtados.style.display = 'none';
        hallados.style.display = 'none';   
    }
    otra();
 
 
    function filtrarMascotas() {

        var filtro = document.getElementById('filtro').value;

        if(filtro === "todas"){
            todas.style.display = 'flex';
            extraviados.style.display = 'none';
            hurtados.style.display = 'none';
            hallados.style.display = 'none';
        }else if (filtro === "extraviados") {
            extraviados.style.display = 'flex';
            hurtados.style.display = 'none';
            hallados.style.display = 'none';
            todas.style.display = 'none';
        }else if (filtro === "hurtados"){
            hurtados.style.display = 'flex';
            hallados.style.display = 'none';
            todas.style.display = 'none';
            extraviados.style.display = 'none';
        }else if (filtro === "hallados"){
            hallados.style.display = 'flex';
            todas.style.display = 'none';
            extraviados.style.display = 'none';
            hurtados.style.display = 'none';
        }

    }

</script>